<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <View
        android:id="@+id/space_ver"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>


    <LinearLayout
        android:layout_below="@+id/space_ver"
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/whitesmoke"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_table_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="key"
            android:textColor="@color/gray"
            android:visibility="visible"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/tv_table_item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="value1"
            android:textColor="@color/gray"
            android:visibility="visible"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/tv_table_item3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="value2"
            android:textColor="@color/gray"
            android:visibility="gone"/>

        <View
            android:id="@+id/space_table_1"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_table_item4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="value3"
            android:textColor="@color/gray"
            android:visibility="gone"/>

        <View
            android:id="@+id/space_table_2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_table_itempercent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="percent"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_table_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/back"
        android:padding="5dp"
        android:visibility="gone"/>
</RelativeLayout>
